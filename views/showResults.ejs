
<html>
  <head>
    <title>Survey Analysis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Style sheet (CSS) and JavaScript scripts necessary to use Bootstrap -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto" id="survey">
            <div class="col-lg-10 mx-auto text-center pb-3 mt-5">
                <h1>Survey Analysis</h1>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="form-group">
                          
                        <div class="col-lg-10 mx-auto mt-3">
                            <h4>Fruits</h4>
                        </div>
                        <ul class="list-group">
                        <% for (var i=0; i<results[0].length; i++){ %>
                            <li class="list-group-item"><%= results[0][i].fruit %> :  <%= results[0][i].count %></li>
                        <% } %>    
                        </ul>
                                                
                        <div class="col-lg-10 mx-auto mt-3">
                            <h4>Animals</h4>
                        </div>
                        <ul class="list-group">
                        <% for (var i=0; i<results[1].length; i++){ %>
                            <li class="list-group-item"><%= results[1][i].animal %> :  <%= results[1][i].count %></li>
                        <% } %>    
                        </ul>

                        <div class="col-lg-10 mx-auto mt-3">
                            <h4>Time of Day</h4>
                        </div>
                        <ul class="list-group">
                        <% for (var i=0; i<results[2].length; i++){ %>
                            <li class="list-group-item"><%= results[2][i].time %> :  <%= results[2][i].count %></li>
                        <% } %>    
                        </ul>


                        <div class="col-lg-10 mx-auto mt-3">
                            <h4>Colors</h4>
                        </div>
                        <ul class="list-group">
                        <% for (var i=0; i<results[3].length; i++){ %>
                            <li class="list-group-item"><%= results[3][i].color %> :  <%= results[3][i].count %></li>
                        <% } %>    
                        </ul>

                        <div class="col-lg-10 mx-auto mt-3">
                            <h4>Streaming Services</h4>
                        </div>
                        <ul class="list-group">
                        <% for (var i=0; i<results[4].length; i++){ %>
                            <li class="list-group-item"><%= results[4][i].streaming %> :  <%= results[4][i].count %></li>
                        <% } %>    
                        </ul>
                                                
                    </div>
                </div>
            </div>

        </div>
      </div>
    </div>

    <script src="/assets/action.js"></script>
    <script src="/assets/jquery.js"></script>
    <link href="/assets/style.css" rel="stylesheet" />
  </body>
</html>
